{{#if resume.education.length}}
<section id="education">
    <h2>Education</h2>
    {{#each resume.education}}
    {{#if area}}
    {{#> item title=institution subtitle=(concat studyType "in" area) location=location startDate=startDate endDate=endDate url=url}}
    {{else}}
    {{#> item title=institution subtitle=studyType location=location startDate=startDate endDate=endDate url=url}}
    {{#if score}}
    <ul>
        <li>
            <div class="score">
                {{score}}
            </div>
        </li>
    </ul>
    {{/if}}
    {{/if}}
    {{/item}}
    {{/each}}
</section>
{{/if}}
